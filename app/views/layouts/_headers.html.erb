<header class="navbar navbar-fixed-top navbar-inverse">

    <div class="container">
      <nav>
        <div class="pull-left btn">
        <%= link_to "Microposter", posts_path, id: "logo", class: "lead" %>
        </div>
          <div class="btn btn-toolbar pull-right">
          <div class="btn-group">
          <% if user_signed_in? %>
                <!-- Split button -->
                <div class="btn-group">

                  <button type="button" class="btn btn-primary"><%= mini_gravatar_for current_user%> <%= current_user.name %></button>
                  <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                    <span class="caret"></span>
                    <span class="sr-only">Toggle Dropdown</span>
                  </button>
                  <ul class="dropdown-menu" role="menu">
                    <li><%= link_to med_gravatar_for current_user %></li>
                    <li><%= link_to "My Account", edit_user_registration_path(current_user.id) %></li>
                    <li><%= link_to "Posts", user_path(current_user.id) %></li>
                    <li class="divider"></li>
                    <li><%= link_to "New Post", new_micropost_path(current_user.id) %></li>
                  </ul>
                </div>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-small btn-primary" %>
          <% else %>
          <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-small btn-primary" %>
          <%= link_to "Log in", new_user_session_path, class: "btn btn-small btn-primary" %>
          <% end %>
          <%= link_to "User List", users_path, class: "btn btn-small btn-primary" %>
          <%= link_to "All Posts", posts_path, class: "btn btn-small btn-primary" %>

          </div>
          </div>
      </nav>
    </div>
</header>
