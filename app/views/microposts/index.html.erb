<% title " - Home" %>
<div class="container-fluid">
    <div class="lead col-xs-12">

      <h1 class="container text-center lead">Cannon Fodder</h1>
      <h4 class="lead">Everyone is talking... Is it about you? Is it something you need to know?
        Let us have it. Fire away! </h4>
      <h2 class="badge">Recent Posts:</h2>
        <ul class="fa-ul">
          <% @microposts.recent.each do |f| %>
            <li><%= f[0] %> - <%= @user.find(f[1]).name %></li>
          <% end %>
        </ul>
    </div>
  <br>
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>Post</th>
      <th>Big Mouth</th>
      <th>Options</th>
    </tr>
    </thead>
    <tbody>
    <% @microposts.each do |micropost| %>
        <tr>
          <td class="content"><%= micropost.content %></td>
          <td><%= @user.find(micropost.user_id).name %></td>
          <td><%= link_to 'Show', micropost, class: "btn btn-xs btn-primary fa fa-comments" %>
            <% if user_signed_in? && micropost.user_id == current_user.id %>
                <%= link_to 'Edit', edit_micropost_path(micropost), class: "btn btn-xs btn-primary fa fa-edit" %>
                <%= link_to 'Delete', micropost, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger fa fa-trash-o" %></td>
            <% end %>
            </tr>
    <% end %>
    </tbody>
  </table>
  <div class="container">
    <% if user_signed_in? %>
        <div class="col-xs-4"><%= link_to "New Micropost", new_micropost_path, class: "btn btn-default" %></div>
        <div class="col-xs-4"></div>
        <div class="col-xs-4"></div>
        </div>
        </div>
    <% else %>
        <div class="col-xs-3"></div>
        <div class="col-xs-6 label-lg label-primary lead"><%= link_to "Sign up", new_user_registration_path, class: 'label label-info whiten' %>
          or <%= link_to "Log in", new_user_session_path, class: "label label-info whiten" %> to begin posting ...
        </div>
        <div class="col-xs-3"></div>
        </div>
        </div>
    <% end %>