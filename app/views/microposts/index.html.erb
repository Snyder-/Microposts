<table>
  <thead>
  <tr>
    <th id="title"><h1>What's Micro-posted?</h1></th>
  </tr>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <% @microposts.each do |micropost| %>
          <tr>
        <td><%= micropost.content %></td>
        <td><%= micropost.user_id%></td>
        <td><%= link_to 'Show', micropost %>
        <%= link_to 'Edit', edit_micropost_path(micropost) %>
        <%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Micropost', new_micropost_path %>
