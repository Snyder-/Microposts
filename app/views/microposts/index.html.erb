<% title " - Home" %>
<div class="show hero-unit">
  <h1 class="lead">Gossip</h1>
  <br>
  <table class="table table-striped">
  <thead>
    <tr>
      <th>Post</th>
      <th>Big Mouth</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <%  @microposts.each do |micropost| %>
          <tr>
        <td class="content"><%= micropost.content %></td>
        <td><%= @user.find(micropost.user_id).name%></td>
        <td><%= link_to 'Show', micropost %>
        <% if user_signed_in? && micropost.user_id == current_user.id %>
        <%= link_to 'Edit', edit_micropost_path(micropost) %>
        <%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if user_signed_in? %>
<strong class="btn btn-lg btn-small"><%= link_to 'New Micropost', new_micropost_path, {confirm: 'Are you sure?'} %></strong>
<% else %>
<strong class="btn btn-lg btn-small"><%= link_to "Sign up", new_user_registration_path %> or <%= link_to "Log in", new_user_session_path %> to begin posting ...</strong>
<% end %>
</div>