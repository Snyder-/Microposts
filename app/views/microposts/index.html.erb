<table>
  <thead>
  <tr>
    <h1 class="title">What others are sharing...</h1>
  </tr>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Options</th>
    </tr>
  </thead>

  <tbody>
    <%  @microposts.each do |micropost| %>
          <tr>
        <td class="content"><%= micropost.content %></td>
        <td><%= micropost.user_id%></td>
        <td><%= link_to 'Show', micropost %>
        <% if user_signed_in? %>
        <%= link_to 'Edit', edit_micropost_path(micropost) %>
        <%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if user_signed_in? %>
<strong class="new-micro"><%= link_to 'New Micropost', new_micropost_path %></strong>
<% else %>
<strong class="new-micro"><%= link_to "Sign up", new_user_registration_path %> or <%= link_to "Log in", new_user_session_path %> to begin posting ...</strong>
<% end %>