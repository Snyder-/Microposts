<% title " - Home" %>
<div class="container-fluid">
  <h1 class="col-sm-offset-5 lead">Gossip</h1>
  <br>
  <table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Post</th>
      <th>Big Mouth</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <%  @microposts.each do |micropost| %>
          <tr>
        <td class="content"><%= micropost.content %></td>
        <td><%= @user.find(micropost.user_id).name%></td>
        <td><%= link_to 'Show', micropost, class: "btn btn-xs btn-primary" %>
        <% if user_signed_in? && micropost.user_id == current_user.id %>
        <%= link_to 'Edit', edit_micropost_path(micropost), class: "btn btn-xs btn-primary" %>
        <%= link_to 'Destroy', micropost, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% if user_signed_in? %>
<div class="btn btn-default"><%= link_to 'New Micropost', new_micropost_path, {confirm: 'Are you sure?'} %></div>
<% else %>
<div class="btn btn-default"><%= link_to "Sign up", new_user_registration_path %> or <%= link_to "Log in", new_user_session_path %> to begin posting ...</div>
<% end %>
</div>