<% if alert %>
    <div id="success_explanation">
      <h2>Success:</h2>

      <ul>
        <li><%= alert %></li>
      </ul>
    </div>
<% end %>
<h1 class="title"><%= @user.name %> said...</h1>
<table>
  <thead>
    <th><strong>Content:</strong></th>
    <th><strong>User:</strong></th>
  </thead>
<p>
  <tbody>
    <tr>
      <td><%= @micropost.content %></td>
      <td><%= @user.name %></td>
    </tr>
  </tbody>
</p>

</table>
<div>
  <%= link_to 'Edit', edit_micropost_path(@micropost) %> | <%= link_to 'Back', microposts_path %>
</div>