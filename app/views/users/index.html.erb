<div class="container-fluid">
  <h1 class="col-sm-offset-4 lead">Users List</h1>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: "btn btn-xs btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</div>