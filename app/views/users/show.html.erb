<div class="center hero-unit" xmlns="http://www.w3.org/1999/html"><p>  <% provide(:title, @user.name) %>  <h1 class="lead well text-center">    <%= gravatar_for @user %>    <%= @user.name.titleize %>    <small class="btn-lg">      <%= "Joined #{time_ago_in_words(@user.created_at)} ago..." %>    </small>  </h1></p><p>  <strong>Email:</strong>  <%= @user.email %></p><p><table class="table table-striped table-hover">  <thead>    <tr>      <th>Posts:</th>      <th>Date</th>    </tr>  </thead>  <tbody>  <% if @user.microposts.all.empty? %>    <tr>      <td>Nothing posted yet!</td>      <td> </td>    </tr>  <% else%>    <% @microposts.each do |f| %>      <tr>        <td><%= f.content %></td>        <td><%= f.created_at.to_date %></td>      </tr>    <% end %>  </tbody>  <%end%></table></p><div class="btn btn-md btn-default">  <%= link_to 'Back', users_path %></div></div>