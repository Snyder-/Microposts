<div class="none" xmlns="http://www.w3.org/1999/html"><p>  <% provide(:title, @user.name) %>  <h1 class="lead well text-center">    <%= gravatar_for @user %>    <%= @user.name.titleize %>  </h1></p><div class="container"><div class="row"><div class="col-xs-2"></div><div class="col-xs-6"></div><div class="col-xs-4 pull-right">  <small class="label-lg label-primary img-circle">    <%= "Joined #{time_ago_in_words(@user.created_at)} ago..." %>  </small></div></div>  </br>  <div class="row">    <div class="col-xs-4"></div>    <div class="col-xs-4"></div>    <div class="col-xs-4"><strong class="badge">Email: <div class="label-lg btn btn-primary"><%= @user.email %></div></strong></div>  </div></div><p><table class="table table-striped table-hover">  <thead>    <tr>      <th>Posts:</th>      <th>Date</th>    </tr>  </thead>  <tbody>  <% if @user.microposts.all.empty? %>    <tr>      <td>Nothing posted yet!</td>      <td> </td>    </tr>  <% else%>    <% @microposts.each do |f| %>      <tr>        <td><%= f.content %></td>        <td><%= f.created_at.to_date %></td>      </tr>    <% end %>  </tbody>  <%end%></table></p><div>  <%= link_to 'Back', users_path, class: "btn btn-default" %></div></div>