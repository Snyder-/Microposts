<div class="center hero-unit" xmlns="http://www.w3.org/1999/html"><p>  <% provide(:title, @user.name) %>  <h1 class="lead">    <%= gravatar_for @user %>    <%= @user.name.titleize %>  </h1></p><p>  <strong>Email:</strong>  <%= @user.email %></p><p><table class="table"  <thead>    <tr>      <th>Posts:</th>      <th>Date</th>    </tr>  </thead>  <tbody>  <% unless @user.microposts.all.empty? %>      <% @microposts.each do |f| %>        <tr>        <td><%= f.content %></td>        <td><%= f.created_at.to_date %></td>        </tr>      <%end%>  </tbody><%end%></table></p><%= link_to 'Edit', edit_user_path(@user) %> |<%= link_to 'Back', users_path %></div>